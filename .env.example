# Database (Neon PostgreSQL)
DATABASE_URL="postgresql://username:password@your-neon-host.neon.tech/prapti?sslmode=require"
DIRECT_URL="postgresql://username:password@your-neon-host.neon.tech/prapti?sslmode=require"

# Cloudflare R2 Storage
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key"
R2_SECRET_ACCESS_KEY="your-r2-secret-key"
R2_BUCKET_NAME="prapti-assets"
R2_PUBLIC_URL="https://pub-xxxxxxxxxxxxxxxxxxxx.r2.dev"

# Google Maps API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
# Optional: For advanced map styling (create at https://console.cloud.google.com/google/maps-apis/studio/maps)
# NEXT_PUBLIC_MAP_ID="your-map-id"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# Google OAuth (for authentication)
GOOGLE_CLIENT_ID="your-google-oauth-client-id"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Prapti"

# CORS Configuration (for development and port forwarding)
# Comma-separated list of allowed origins
# For VS Code Port Forwarding, add: https://*.preview.app.github.dev
# For Vercel preview: https://*.vercel.app
# For production: https://your-domain.com
NEXT_PUBLIC_ALLOWED_ORIGINS="http://localhost:3000,https://*.preview.app.github.dev,https://*.vercel.app"

# Redis Cache (Optional - Upstash Redis for distributed caching)
# Get free account at https://console.upstash.com/
# If not set, falls back to in-memory cache (won't sync across multiple servers)
UPSTASH_REDIS_REST_URL="https://your-redis-url.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-redis-token"

# Optional: Analytics & Monitoring
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
# SENTRY_DSN="your-sentry-dsn"
